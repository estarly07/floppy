<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="date"
            type="String" />

        <variable
            name="isOwner"
            type="Boolean" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/messageLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_50dp"
            android:background="@drawable/chat_recibido"
            android:orientation="vertical"
            android:visibility="gone">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/imgMensaje"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300dp"
                android:layout_margin="@dimen/_2dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:gravity="center"
                android:padding="@dimen/_2dp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="@dimen/_10dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="@dimen/_10dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:text="@{date}"
                android:textColor="@color/blanco2"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/messageRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_50dp"
            android:background="@drawable/chat_enviado"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/imgMensajeEnviado"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_300dp"
                    android:layout_margin="@dimen/_2dp"
                    android:gravity="center"
                    app:riv_corner_radius="@dimen/_10dp"
                    android:padding="@dimen/_2dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginStart="@dimen/_70dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_10dp"
                        android:layout_marginTop="@dimen/_2dp"
                        android:layout_marginEnd="@dimen/_10dp"
                        android:layout_marginBottom="@dimen/_2dp"
                        android:fontFamily="@font/roboto_medium"
                        android:gravity="center"
                        android:padding="@dimen/_2dp"
                        android:text="@{date}"
                        android:textColor="@color/blanco2"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imgCheck"
                        android:layout_width="@dimen/_15dp"
                        android:layout_height="@dimen/_15dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="@dimen/_2dp"
                        android:src="@drawable/ic_double_check" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</layout>